<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>servlets.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionCleanerServlet</servlet-name>
        <servlet-class>servlets.SessionCleanerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionRefreshServlet</servlet-name>
        <servlet-class>servlets.SessionRefreshServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckChangeServlet</servlet-name>
        <servlet-class>servlets.CheckChangeServlet</servlet-class>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionCleanerServlet</servlet-name>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionRefreshServlet</servlet-name>
        <url-pattern>/refresh</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/processing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckChangeServlet</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>422</error-code>
        <location>/error-pages/422.jsp</location>
    </error-page>
</web-app>